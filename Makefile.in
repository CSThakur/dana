prefix		:= @prefix@
abs_top_srcdir	:= @abs_top_srcdir@
XLEN            := @XLEN@

test_smoke_dir  := $(abs_top_srcdir)/smoke

.PHONY: all smoke clean

all: smoke

smoke:
	mkdir -p $@
	$(MAKE) -C $@ -f $(test_smoke_dir)/Makefile abs_top_srcdir=$(abs_top_srcdir) src_dir=$(test_smoke_dir) XLEN=$(XLEN)

clean:
	$(MAKE) -C smoke -f $(test_smoke_dir)/Makefile abs_top_srcdir=$(abs_top_srcdir) src_dir=$(test_smoke_dir) clean
